<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/act_innerLay1"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/act_img1"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ehsan"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:textStyle="bold"
        android:id="@+id/act_txtV1"
        app:layout_constraintStart_toStartOf="@id/act_img1"
        app:layout_constraintEnd_toEndOf="@id/act_img1"
        app:layout_constraintTop_toBottomOf="@+id/act_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Soccerr!"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
