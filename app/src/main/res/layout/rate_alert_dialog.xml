<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/inner2"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/alert_dialog"
        >
        <TextView
            android:id="@+id/txtView1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What rate should I rate?"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            ></TextView>
        <TextView
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtView1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/txtView1"
            app:layout_constraintEnd_toEndOf="@id/txtView1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="To make sure you have applicants,thios the market rate jos like yours below:"
            ></TextView>

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/txtVChild"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="# of Children"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toLeftOf="@id/txtVGender"
            app:layout_constraintTop_toBottomOf="@id/txtView2"></TextView>

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/txtVGender"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Rate per Hour"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/txtVChild"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtView2"></TextView>
        <TextView
            android:id="@+id/txtVChild1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toLeftOf="@id/txtVGender"
            app:layout_constraintTop_toBottomOf="@id/txtVChild"></TextView>

        <TextView
            android:id="@+id/txtVchild2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="$13"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/txtVChild"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtVChild"></TextView>
        <TextView
            android:id="@+id/txtVChild3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="2"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toLeftOf="@id/txtVGender"
            app:layout_constraintTop_toBottomOf="@id/txtVChild1"></TextView>

        <TextView

            android:id="@+id/txtVchild4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="$15"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/txtVChild"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtVChild1"></TextView>
        <TextView
            android:id="@+id/txtVChild5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toLeftOf="@id/txtVGender"
            app:layout_constraintTop_toBottomOf="@id/txtVChild3"></TextView>

        <TextView

            android:id="@+id/txtVchild6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="$18"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/txtVChild"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtVChild3"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
