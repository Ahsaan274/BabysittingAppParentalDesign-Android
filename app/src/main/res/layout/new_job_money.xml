<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/new_job_money_txtV1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Enter the rate per hour you would like to pay"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/new_job_money_img1"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_txtV1"
        android:src="@drawable/ehsan"
        android:layout_height="80dp"
        android:layout_width="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <EditText
        android:id="@+id/new_job_money_editTxt"
        android:layout_width="150dp"
        android:background="@drawable/edit_text_border"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"></EditText>
    <TextView
        android:id="@+id/new_job_money_perHour"
        android:text="Per hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/new_job_money_editTxt"
        app:layout_constraintRight_toRightOf="@id/new_job_money_editTxt"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_editTxt"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/new_job_money_Recommneded"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_perHour"
        app:layout_constraintStart_toStartOf="@id/new_job_money_editTxt"
        app:layout_constraintEnd_toEndOf="@id/new_job_money_editTxt"
        android:layout_marginTop="50dp"
        android:text="View Recommended rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
    <TextView
        android:id="@+id/new_job_money_steps"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_Recommneded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Step 1/5)"
        ></TextView>
    <Button
        android:id="@+id/next1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/new_job_money_steps"
        android:layout_margin="20dp"
        android:background="@drawable/radius"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="20dp"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>