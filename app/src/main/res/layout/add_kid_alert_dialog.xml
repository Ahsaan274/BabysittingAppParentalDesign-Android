<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/alert_Add"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        ></ListView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/alert_items_img"
        app:layout_constraintTop_toBottomOf="@id/alert_Add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        />
    <TextView
        android:id="@+id/add_Kid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alert_items_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Add kid!"
        ></TextView>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_Kid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_radio_group"

        android:text="Save"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>