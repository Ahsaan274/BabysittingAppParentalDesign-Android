<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/new_job_txtV1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Enter the date and time you need your sitter"
        ></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/new_job_img1"
        app:layout_constraintTop_toBottomOf="@id/new_job_txtV1"
        android:src="@drawable/ehsan"
        android:layout_height="80dp"
        android:layout_width="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <Button
        android:text="Start"
        android:textAllCaps="false"
        android:id="@+id/new_job_strt"
        app:layout_constraintTop_toBottomOf="@id/new_job_img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"></Button>
    <Button
        android:text="End"
        android:textAllCaps="false"
        android:id="@+id/new_job_end"
        app:layout_constraintTop_toBottomOf="@id/new_job_strt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"></Button>
    <TextView
        android:id="@+id/new_job_steps"
        app:layout_constraintTop_toBottomOf="@id/new_job_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Step 1/5)"
        ></TextView>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/new_job_steps"
        android:layout_margin="20dp"
        android:background="@drawable/radius"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="20dp"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>