<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/topL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCancel"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_cancel_black_24dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:id="@+id/inner2"
        android:background="@drawable/alert_backg"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/editImg2"
            android:src="@drawable/ehsan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/editImg3"
            android:layout_height="70dp"
            android:layout_width="70dp"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/editImg3"
            android:src="@drawable/fat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/editImg2"
            android:layout_height="70dp"
            android:layout_width="70dp"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/txtVeditImgLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/editImg2"
            app:layout_constraintEnd_toEndOf="@id/editImg2"
            app:layout_constraintTop_toBottomOf="@id/editImg2"
            android:text="Boy"
            ></TextView>
        <TextView
            android:id="@+id/txtVeditImgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Girl"
            app:layout_constraintStart_toStartOf="@id/editImg3"
            app:layout_constraintEnd_toEndOf="@id/editImg3"
            app:layout_constraintTop_toBottomOf="@id/editImg3"
            ></TextView>
        <EditText
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Name"
            android:id="@+id/editName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            app:layout_constraintTop_toBottomOf="@id/txtVeditImgLeft"
            app:layout_constraintStart_toStartOf="@id/editImg2"
            app:layout_constraintEnd_toEndOf="@id/editImg2"
            ></EditText>
        <EditText
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Age"
            android:id="@+id/editAge"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            app:layout_constraintTop_toBottomOf="@id/txtVeditImgRight"
            app:layout_constraintStart_toStartOf="@id/editImg3"
            ></EditText>
        <EditText
            android:id="@+id/editDescription"
            android:gravity="top|center"
            android:hint="Notes,(Alergic,Asthma,Special Needs, etc)"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/editName"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_border"
            ></EditText>
        <Button
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/editDescription"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_radio_group"
            ></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
